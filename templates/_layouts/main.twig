{% set dateFormatNews   = "F d, Y" %}
{% set dateFormatDrinks = "M, Y" %}
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Crafty Coffee</title>
    {% set bowerRoot  = siteUrl ~ "bower_components/" %}
    {% set cssRoot    = siteUrl ~ "stylesheets/" %}
    {% set jsRoot     = siteUrl ~ "js/" %}
    {% set imagesRoot = siteUrl ~ "images/" %}

    {% do view.registerCssFile(bowerRoot ~ "foundation/css/foundation.css") %}
    {% do view.registerCssFile(bowerRoot ~ "modernizr/modernizr.js") %}
    {% do view.registerCssFile(cssRoot ~ "app.css") %}
    {% do view.registerJsFile(bowerRoot ~ "jquery/dist/jquery.js") %}
    {% do view.registerJsFile(bowerRoot ~ "foundation/js/foundation.min.js") %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Playfair+Display:700|Fauna+One|Pacifico|Merriweather+Sans:400,700'
        rel='stylesheet' type='text/css'>
</head>
<body>
<nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
        <li class="name">
            <h1><a href={{ siteUrl }}><span class="scripty">Crafty</span></a></h1>
        </li>
        <li class="toggle-topbar menu-icon">
            <a href="#"><span>Menu</span></a>
        </li>
    </ul>
    <section class="top-bar-section">
        <ul class="right">
            <li><a href="#">About Crafty Coffee</a></li>
            <li>
                <a href="#">Our Signature Drinks</a>
            </li>
            <li>
                <a href="#">Our Recipes</a>
            </li>
        </ul>
    </section>
</nav>

{% block main %}
{% endblock %}

<div class="row">
    <div class="footer">
        <p>Copyright 2018 Crafty Coffee, Inc. All rights reserved. Enjoy the buzz! (Part of a
            <a href="https://mijingo.com/craft">Mijingo course</a>)</p>
    </div>
</div>

<script>
    $(document).foundation();
</script>
</body>
</html>