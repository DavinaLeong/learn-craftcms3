{% extends "./_layouts/main" %}

{% block main %}
<ul class="breadcrumbs">
    <li><a href="{{ siteUrl }}">Home</a></li>
    <li>Recipes</li>
</ul>

<div class="full-bleed-header" style="background-size: 100%; height: 200px; background-image: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), url({{ imagesRoot }}recipes/dark-horse-tres-blueberry-stout-2.jpg); background-repeat: no-repeat, repeat;">
    <div class="page-title text-center">
        <h2 class="logo"><span class="scripty">Our Recipes</h2>
    </div>
</div>
<div class="row page-content">
    <div class="large-12 small-12 columns">
        <p>The most recent recipes created.</p>
        <table width="100%">
            <tr>
                <th>Recipe Name</th>
                <th>Date Posted</th>
            </tr>

            {% for entry in craft.entries.section('recipes').all() %}
            <tr>
                <td><a href="{{ entry.url }}">{{ entry.title }}</a></td>
                <td>{{ entry.datePosted | date("M Y") }}</td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>

{% endblock %}